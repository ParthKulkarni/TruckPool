<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginBottom="40dp"
    android:paddingBottom="30dp"
    >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.parth.truckpool.TabbedUser$PlaceholderFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:layout_marginBottom="40dp"
    >

    <TextView
        android:id="@+id/tvStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Name:"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/tvWelcome"
        android:layout_alignStart="@+id/etUpdateContact" />

    <TextView
        android:id="@+id/tvs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/tvStatus1"
        android:layout_alignBottom="@+id/tvStatus1"
        android:layout_alignEnd="@+id/etUpdateContact" />

    <TextView
        android:id="@+id/tvrate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="City:"
        android:layout_below="@+id/tvStatus1"
        android:layout_alignStart="@+id/tvStatus1" />

    <TextView
        android:id="@+id/tvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvrate1"
        android:layout_alignEnd="@+id/tvs"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvrate1"
        android:layout_below="@+id/tvrate1"
        android:layout_marginTop="59dp"
        android:text="Contact No:" />

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvContact"
        android:layout_alignEnd="@+id/tvr"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="Update Contact" />

    <EditText
        android:id="@+id/etUpdateContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="New Contact No."
        android:inputType="phone"
        android:visibility="invisible"
        android:layout_below="@+id/btContact"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:visibility="invisible"
        android:layout_below="@+id/etUpdateContact"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</RelativeLayout>
</ScrollView>
